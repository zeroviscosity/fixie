div#points-ctrl(data-ng-controller="PointsCtrl as pts")
  div.question-box-wrp
    div.question-box-arrow(data-fx-arrow, data-direction="back")
    div.question-box.shadow
      div.question-box-label Where are you going?
      div.question-box-options
        div.row.collapse
          div.small-2.columns
            span.prefix From:
          div.small-10.columns
            input#location-start.expand(type="text", placeholder="Start Point", 
              data-ng-model="pts.trip.location.start")
        div.row.collapse
          div.small-2.columns
            span.prefix To:
          div.small-10.columns
            input#location-end.expand(type="text", placeholder="End Point", 
              data-ng-model="pts.trip.location.end")
